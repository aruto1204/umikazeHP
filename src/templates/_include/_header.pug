-
  const navIcon = {
    img: '../images/00_common/umikaze_icon.png',
    alt: 'umikaze_icon',
  }
  const navItems = [
    {
      name: "TOP",
      url: "/",
    },
    {
      name: "妊活について",
      url: "/family-planning",
    },
    {
      name: "妊娠中について",
      url: "/pregnant",
    },
    {
      name: "産後について",
      url: "/postpartum",
    },
    {
      name: "各教室のご案内",
      url: "/classroom",
    },
    {
      name: "料金のご案内",
      url: "/price",
    },
  ]
  const navTopic = {
        name: "TOPIC<br>最新情報",
        url: "/topic",
  }
  const navLine = {
        name: "LINEでの<br>お問い合わせ",
        url: "/",
  }
  const navReserve = {
        name: "ご予約",
        url: "https://coubic.com/seabreezebooking/services#pageContent",
  }
  const navPayment = {
        name: "お支払いはこちら",
        url: "/price#payment",
  }
  const navInstagram = {
        name: "instagram_icon",
        url: "https://instagram.com/seabreeze_womens_care_salon?igshid=YmMyMTA2M2Y=",
        icon: "../images/01_top/square-instagram.svg",
  }
//header
header.header
  .header__inner
    .header__icon
      img(src=navIcon.img, alt=navIcon.alt)
    nav.header__nav
      ul.header__items
        each navItem in navItems
          li.header__item
            a(href=navItem.url) #{navItem.name}
    .header__link
      .header__topic
        a(href=navTopic.url class="link-btn") !{navTopic.name}
      .header__web
        a(href=navLine.url class="link-btn") !{navLine.name}
      .header__wrapper
        .header__reserve
          a(href=navReserve.url class="link-btn" target="_blank" rel="noopener noreferrer") !{navReserve.name}
        .header__payment
          a(href=navPayment.url class="link-btn") #{navPayment.name}
      .header__instagram
        a(href=navInstagram.url target="_blank" rel="noopener noreferrer")
          img(src=navInstagram.icon, alt=navInstagram.name)
    //hamburger menu
    .header__drawer
      - for (var i = 0; i < 3; i++)
        span.header__drawer-line
    .header__overlay
